<Page
    x:Class="WeatherUp.StorageDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeatherUp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#F0F8FF">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock x:Name="savedWeatherDisplay" x:Uid="savedWeath" FontSize="25" FontFamily="Ash" FontWeight="Bold" Foreground="#525C65" Text="" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                <TextBlock x:Name="weatherDisplay" Margin="30,35,0,0"  />
                <Button x:Name="btnClear" x:Uid="btnClearContent" Content="" HorizontalAlignment="Center" Tapped="btnClear_Tapped" />
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
